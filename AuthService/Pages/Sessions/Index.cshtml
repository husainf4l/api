@page "/admin/sessions"
@model AuthService.Pages.Sessions.IndexModel
@{
    ViewData["Title"] = "Active Sessions";
}

<div class="page-header">
    <h2>Active Sessions</h2>
    <div class="stats">
        <span class="stat">Total: @Model.Sessions.Count</span>
    </div>
</div>

<div class="filters">
    <select class="filter-select" onchange="filterSessions(this.value)">
        <option value="all">All Applications</option>
        @foreach (var app in Model.Applications)
        {
            <option value="@app.ClientId">@app.Name</option>
        }
    </select>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Application</th>
                <th>IP Address</th>
                <th>Device</th>
                <th>Login Time</th>
                <th>Last Activity</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Sessions.Any())
            {
                @foreach (var session in Model.Sessions)
                {
                    <tr>
                        <td>@session.User.Email</td>
                        <td>@session.Application.Name</td>
                        <td>@session.IpAddress</td>
                        <td>@(session.DeviceInfo ?? "Unknown")</td>
                        <td>@session.LoginAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@(session.LastActivityAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</td>
                        <td>
                            <span class="badge @(session.IsActive ? "badge-success" : "badge-danger")">
                                @(session.IsActive ? "Active" : "Ended")
                            </span>
                        </td>
                        <td>
                            @if (session.IsActive)
                            {
                                <button onclick="endSession('@session.Id')" class="btn-link text-danger">End Session</button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No active sessions</td>
                </tr>
            }
        </tbody>
    </table>
</div>

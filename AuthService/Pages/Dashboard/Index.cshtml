@page
@model AuthService.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="row">
    <!-- Statistics Cards -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title">Total Applications</div>
                        <div class="card-value">@Model.TotalApplications</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card success">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title">Total Users</div>
                        <div class="card-value">@Model.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card warning">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title">Active API Keys</div>
                        <div class="card-value">@Model.ActiveApiKeys</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-key fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card info">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="card-title">Today's Logins</div>
                        <div class="card-value">@Model.TotalSessionsToday</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-sign-in-alt fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Activity -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-history me-2"></i>
                Recent Activity
            </div>
            <div class="card-body">
                @if (Model.RecentActivities.Any())
                {
                    <div class="timeline">
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker">
                                    <i class="@activity.IconClass"></i>
                                </div>
                                <div class="timeline-content">
                                    <div class="timeline-title">@activity.Description</div>
                                    <div class="timeline-meta">
                                        <span class="badge bg-light text-dark">@activity.ApplicationName</span>
                                        <small class="text-muted">@activity.Timestamp.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No recent activity to display</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Top Applications -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-star me-2"></i>
                Top Applications
            </div>
            <div class="card-body">
                @if (Model.TopApplications.Any())
                {
                    @foreach (var app in Model.TopApplications)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <div class="flex-grow-1">
                                <div class="fw-bold">@app.Name</div>
                                <small class="text-muted">@app.UserCount users, @app.ActiveApiKeyCount active keys</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-primary">@app.Code</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-building fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No applications yet</p>
                        <a href="/Applications" class="btn btn-primary btn-sm">Create Application</a>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mt-3">
            <div class="card-header">
                <i class="fas fa-bolt me-2"></i>
                Quick Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Applications" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>Add Application
                    </a>
                    <a href="/Users" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-user-plus me-1"></i>Manage Users
                    </a>
                    <a href="/ApiKeys" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-key me-1"></i>Generate API Key
                    </a>
                    <button class="btn btn-outline-info btn-sm" onclick="window.location.reload()">
                        <i class="fas fa-sync me-1"></i>Refresh Data
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Stats Row -->
<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-shield-alt me-2"></i>
                Security Overview
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="h4 mb-0">@Model.TotalSessionsToday</div>
                        <small class="text-muted">Successful Logins Today</small>
                    </div>
                    <div class="col-6">
                        <div class="h4 mb-0 text-danger">@Model.FailedLoginsToday</div>
                        <small class="text-muted">Failed Attempts Today</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-chart-pie me-2"></i>
                API Keys Status
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="h4 mb-0 text-success">@Model.ActiveApiKeys</div>
                        <small class="text-muted">Active Keys</small>
                    </div>
                    <div class="col-6">
                        <div class="h4 mb-0 text-warning">@(Model.TotalApiKeys - Model.ActiveApiKeys)</div>
                        <small class="text-muted">Inactive/Revoked</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e9ecef;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -22px;
    top: 0;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: white;
    border: 2px solid #007bff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 8px;
}

.timeline-marker i {
    color: #007bff;
}

.timeline-content {
    background: #f8f9fa;
    padding: 10px 15px;
    border-radius: 6px;
    border-left: 3px solid #007bff;
}

.timeline-title {
    font-weight: 500;
    margin-bottom: 5px;
}

.timeline-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.timeline-meta small {
    font-size: 0.75rem;
}
</style>

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Jwt": {
    "Secret": "dev-super-secret-jwt-key-min-32-characters-long-for-development-only",
    "Issuer": "AuthService",
    "Audience": "AuthServiceClients",
    "AccessTokenExpiryMinutes": "60",
    "RefreshTokenExpiryDays": "30"
  },
  "Monitoring": {
    "Siem": {
      "Endpoint": "http://localhost:5000/audit-events",
      "ApiKey": ""
    }
  },
  "Security": {
    "Cleanup": {
      "IntervalMinutes": 15
    },
    "DormantAccountDays": 60
  }
}

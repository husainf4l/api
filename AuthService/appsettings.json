{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "your-super-secret-jwt-key-min-32-characters-long-change-this-in-production",
    "Issuer": "AuthService",
    "Audience": "AuthServiceClients",
    "AccessTokenExpiryMinutes": "15",
    "RefreshTokenExpiryDays": "7"
  },
  "Monitoring": {
    "Siem": {
      "Endpoint": "http://localhost:5000/audit-events",
      "ApiKey": ""
    }
  },
  "Security": {
    "Cleanup": {
      "IntervalMinutes": 60
    },
    "DormantAccountDays": 180
  }
}
